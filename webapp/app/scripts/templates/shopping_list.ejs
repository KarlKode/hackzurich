<h3>Shopping List</h3>

<div class="row">
  <div class="col-md-12">
<% _.each(ingredients, function (ingredient) { %>
    <div class="well">
 
      <div class="caption">
      <a href="#" class="btn btn-danger remove" data-ean="<%=ingredient.ean%>" role="button" style="float: right;margin: 0;margin-top: -3px;">Remove</a>
        <h3 style="margin:0"><%=ingredient.title%></h3> 
      </div>
    
  </div>
<% }) %>
</div>
</div> 